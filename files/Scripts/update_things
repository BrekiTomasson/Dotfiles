#!/usr/bin/env fish

echo "Updating ..."

echo "- Brew"
# Homebrew
brew-bump
brew-cleanup

echo "- Fish shell"
fish_update_completions

echo "- Composer"
composer self-update
composer global update

echo "- NPM"
npm update -g

echo "- Apple Updates"
/usr/sbin/softwareupdate -ia

echo "- Fisher plugins"
fisher update
